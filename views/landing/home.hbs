<div class="row">
    <ul class="nav flex-column">
        <li class="nav-item text-end">
            <a href="/auth/register" id="signed-in-dashboard-link" class="nav-link fw-bolder">
                Register
            </a>
        </li>
    </ul>
</div>

<div class="row">
    <form style="margin:10rem 0;" action="/auth/signin" method="post">

        <div class="container">
            <div class="row">
                <div class="col-12 my-4">
                    <div class="input-group">

                        <span class="input-group-text" id="basic-addon1">
                            <i class="bi bi-envelope"></i>
                        </span>

                        <input type="email" class="form-control" name="email" id="signin-email"
                            placeholder="name@example.com">
                    </div>

                </div>

                <div class="col-12 my-4">
                    <div class="input-group"><span class="input-group-text" id="basic-addon1">
                            <i class="bi bi-key"></i>
                        </span>
                        <input type="password" class="form-control" name="pwd" id="signin-pwd" placeholder="Password">
                    </div>
                </div>

                <div class="col-12 my-0">
                    <label>
                        <input class="form-check-input" type="checkbox" value="remember-me"> Remember me
                    </label>
                </div>

                <div class="col-12">
                    <button class="btn btn-lg btn-primary" type="submit">Sign in</button>
                </div>
            </div>
        </div>
    </form>
</div>