<div class="row">
    <div class="col-2">
        <p class="fw-bolder" style="font-size:1.5rem;">
            {{user.fname}}
        </p>
    </div>

    <div class="col auto"></div>

    <div class="col-2">
        <i class="bi bi-three-dots-vertical menu-item text-secondary settings" data-bs-toggle="modal"
            data-bs-target="#contactsettings" style="font-size:1.5rem;font-weight:bolder;"></i>
    </div>
</div>

<div class="row my-5">
    <div class="col-12 contact-edit-form">
        {{>editcontactform}}
    </div>
</div>

<div class="col auto"></div>

<div class="row">
    <div class="col auto">
        <div class="row">
            <div class="col auto">
                <i id="add-email" class="bi bi-envelope" style="font-size:2rem;">
                    <i class="bi bi-plus"></i>
                </i>
            </div>
            <div class="col auto">
                <i id="add-phone" class="bi bi-phone" style="font-size:2rem;">
                    <i class="bi bi-plus"></i>
                </i>
            </div>
        </div>
    </div>
</div>

<div id="dialog"></div>
<input id="rmtuser" type="hidden" value="{{user._id}}" readonly>
</div>