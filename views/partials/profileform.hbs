<form id="edit-profile-form" action="/user/profile/update" method="post">
    <div class="container">
        <div class="row">
            <div class="col-12 my-4">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-sort-alpha-up"></i>
                    </span>

                    <input class="form-control" type="text" name="fname" value="{{user.fname}}" required>
                </div>
            </div>

            <div class="col-12 my-4">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-sort-alpha-up"></i>
                    </span>

                    <input class="form-control" type="text" name="uname" {{#if user.uname}} value="{{user.uname}}"
                        {{else}} placeholder="Create a username" {{/if}}>
                </div>
            </div>

            <div class="col-12 my-4">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-sort-alpha-up"></i>
                    </span>

                    <input class="form-control" type="text" name="lname" value="{{user.lname}}" required>
                </div>
            </div>

            <div class="col-12 my-4">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-envelope"></i>
                    </span>

                    <input class="form-control" type="email" name="email" value="{{user.email}}" required>
                </div>
            </div>

            <div class="col-12 my-4">
                <div class="input-group">
                    <input id="sig-submit-button" type="submit" class="btn btn-primary" type="button"
                        style="border-radius: 15px;">
                </div>
            </div>
        </div>
    </div>
    {{#if user.reauthenticated}}{{else}}
    <input type="hidden" name="_csrf" value="{{csrfToken}}" required>{{/if}}

    <input id="rmtuser" type="hidden" value="{{user._id}}" readonly>
</form>